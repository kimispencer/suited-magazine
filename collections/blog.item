<section id="Article">

	<div class="page">
		{.section item}
		<article id="post-{id}" class="{@|item-classes}" data-item-id="{id}">
			<div class="page-hero" style="background-image:url({assetUrl})"></div>

			<div class="padded-full-span">
				<p class="title uppercase">{categories}</p>
				<h2 class="title" data-content-field="title">{title}</h2>
				{.section customContent}
				<p class="title uppercase">{subject}</p>
				{.end}

				<!--MAIN CONTENT-->
				{body}

				<!-- CREDITS -->
				<div class="credits">
					{.section customContent}
					<p class="title uppercase credit-title">Credits</p>
					<p class="paragraph credit-tag">Photography <span class="uppcase">{photographer}</span></p>
					<p class="paragraph credit-tag">Words {author}</p>
				</div>
				{.end}
			</div>
		</article>
		{.end}
		<!--PAGINATION-->
		{.section pagination}
		<nav class="pagination padded-full-span">
			{.section prevItem}
			<a class="prev-item" href="{fullUrl}">
				<div class="pagination-container">
					<p>&larr; Previous</p>
					<p>{title}</p>
					<img class="thumb" src="{assetUrl}" />
				</div>
			</a>{.end}
			{.section nextItem}
			<a class="next-item" href="{fullUrl}">
				<div class="pagination-container">
					<p>Next &rarr;</p>
					<p>{title}</p>
					<img class="thumb" src="{assetUrl}" />
				</div>
			</a>
			{.end}
		</nav>
		{.end}

	</div>

</section>