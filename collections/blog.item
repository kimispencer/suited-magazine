<div class="page">
{.section item}
<!--WRAPPER-->
<section class="feature-item">
	<article id="post-{id}" class="{@|item-classes}" data-item-id="{id}">
		<div class="page-hero" style="background-image:url({assetUrl})"></div>

		<!--POST TILE-->
		<h1 class="title" data-content-field="title">{title}</h1>

		<!--MAIN CONTENT-->
		{body}
	</article>
</section>
{.end}
</div>

<!--PAGINATION-->

{.section pagination}
  <nav class="pagination">
      {.section prevItem}<a class="prev-item" href="{fullUrl}">&larr; {title}</a>{.end}
      {.section nextItem}<a class="next-item" href="{fullUrl}">{title} &rarr;</a>{.end}
  </nav>
{.end}
