<section id="Article">

	<div class="page">
		{.section item}
		<article id="post-{id}" class="{@|item-classes}" data-item-id="{id}">
			{.section customContent}
			<div class="page-hero" style="background-image:url({hero.assetUrl})">
				<div class="overlay {overlayPosition}" style="color:{overlayColor};">
					<h1 class="title">{title}</h1>
					<h3 class="title">{excerpt}</h3>
				</div>
			</div>
			{.end}

			<div class="padded-full-span">
				<div class="article-intro">
					<p class="title uppercase">{categories}</p>
					<h2 class="title" data-content-field="title">{title}</h2>
					{.section customContent}
					<p class="title uppercase">{subject}</p>
					{.end}
				</div>

				<!--MAIN CONTENT-->
				<div class="article-body">
				{body}
				</div>

				<!-- CREDITS -->
				<div class="credits">
					{.section customContent}
					<p class="title uppercase credit-title">Credits</p>
					<p class="paragraph credit-tag">Photography <span class="uppcase">{photographer}</span></p>
					<p class="paragraph credit-tag">Words {author}</p>
				</div>
				{.end}
			</div>
		</article>
		{.end}
		<!--PAGINATION-->
		{.section pagination}
		<nav class="pagination padded-full-span">
			{.section prevItem}
			<a class="prev-item" href="{fullUrl}">
				<div class="pagination-container">
					<p>&larr; Previous</p>
					<p>{title}</p>
					<div class="bg-img thumb" style="background-image: url({assetUrl});"></div>
				</div>
			</a>{.end}
			{.section nextItem}
			<a class="next-item" href="{fullUrl}">
				<div class="pagination-container">
					<p>Next &rarr;</p>
					<p>{title}</p>
					<div class="bg-img thumb" style="background-image: url({assetUrl});"></div>
				</div>
			</a>
			{.end}
		</nav>
		{.end}

	</div>

</section>